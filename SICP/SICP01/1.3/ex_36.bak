(define tolerance 0.00001)
(define (fixed-point f first-guess)
  (define (close-enough? v1 v2)
    (< (abs (- v1 v2)) tolerance))
  (define (try guess)
    (let ((next (f guess)))
      (if (close-enough? guess next)
          (report-prime next)
          (try next))))
  (try first-guess))

(define (report-prime next)
    (newline)
    (display " *** ")
    (display next)
    next)

